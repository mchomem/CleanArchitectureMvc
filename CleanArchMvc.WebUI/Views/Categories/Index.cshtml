@model IEnumerable<CleanArchMvc.Application.DTOs.CategoryDTO>

@{
    ViewData["Title"] = "Categories Management";
}

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row mb-3">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span tutle="Register New" class="fas fa-plus"></span> Register New
                </a>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <table class="table">
        <tread>
            <tr style="background-color:silver;">
                <th style="width: 80%;">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center" style="width: 20%;">
                    Actions
                </th>
            </tr>
        </tread>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="p-2">
                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-sm btn-secondary mr-2">
                                <span class="fas fa-edit" style="font-size:12px;"></span>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-sm btn-primary mr-2">
                                <span class="fas fa-eye" style="font-size:12px;"></span>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-sm btn-danger">
                                <span class="fas fa-trash-alt" style="font-size:12px;"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
