@model IEnumerable<CleanArchMvc.Application.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Products Management";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<style>
    .modal-lg {
        max-width: 80%;
    }
</style>

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />

<div class="row mb-3">
    <div class="col-md-12">
        <div>
            <div class="pull-left">
                <a asp-action="Create" class="btn btn-primary">
                    <span tutle="Register New" class="fas fa-plus"></span> Register New
                </a>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <table class="table">
        <thead>
            <tr style="background-color:silver;">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="p-2">
                        @(item.Description.Length > 30 ? $"{item.Description.Substring(0, 30)} ..." : item.Description)
                    </td>
                    <td class="text-center p-2">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="text-center p-2">
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td class="p-2">
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td class="p-2">
                        <div class="d-flex justify-content-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" title="Edit" class="btn btn-sm btn-secondary mr-2">
                                <span class="fas fa-edit" style="font-size:12px;"></span>
                            </a>

                            <a asp-action="Details" asp-route-id="@item.Id" title="Details" class="btn btn-sm btn-primary mr-2">
                                <span class="fas fa-eye" style="font-size:12px;"></span>
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="btn btn-sm btn-danger">
                                <span class="fas fa-trash-alt" style="font-size:12px;"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_pager" model="@pager" />
</div>
